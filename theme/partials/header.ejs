<html lang="en"> 
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <%- dashboardConfig.injectCSS ? `<style>${dashboardConfig.injectCSS}</style>` : '' %>
</head>
<style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap');
body {
font-family: 'Poppins', sans-serif;
}
.btn {
transition: 0.3s!important;
}
button {
background-color: white!important;
border-color: white!important;
border-radius: 10px;
}
.nav-link:hover {
color: #ffcc4c!important;
transition: 0.3s!important;
}
.nav-link {
font-weight: 400;
transition: 0.3s!important;
}
.navbar-brand {
font-weight: 600;
}
img {
  transition: 1s;
  -webkit-transition: 1s;
  -moz-transition: 1s;
  -ms-transition: 1s;
  -o-transition: 1s;
  width: 120px;
  height: 120px;
  display: block;
  margin-right: auto;
  margin-left: auto;
}
img:hover {
  transition: 1s;
  -webkit-transition: 1s;
  -moz-transition: 1s;
  -ms-transition: 1s;
  -o-transition: 1s;
  -webkit-transform: rotate(360deg);
  -moz-transform: rotate(360deg);
  -o-transform: rotate(360deg);
  -ms-transform: rotate(360deg);
  transform: rotate(360deg);
} 
</style>
<body style="background-color: #121212;">
  <nav style="background-color: #121212!important;" class="navbar navbar-expand-lg navbar-light bg-light">
    <div style="color: white;" class="container-fluid">
      <a style="color: white;"class="navbar-brand"><%= bot?.user?.username %></a>

        <ul style="color:white!important; background-color: #333232; border-radius: 0px 0px 5px 5px"; class="navbar-nav me-auto mb-2 mb-lg-0">
          <li style="color: white;" class="nav-item">
            <a style="color: white;" class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          <% if(hasClientSecret) { %>
            <li style="color: white;" class="nav-item">
              <a style="color: white;" class="nav-link" href="/selector">Dashboard</a>
            </li>
          <% } %>
          <li style="color: white;" class="nav-item">
            <a style="color: white;" class="nav-link" href="<%= dashboardDetails.inviteUrl ? dashboardDetails.inviteUrl : `https://discord.com/oauth2/authorize?client_id=${bot.user.id}&scope=bot&permissions=8` %>">Invite</a>
          </li>
          <% if(dashboardDetails.serverUrl) { %>
            <li style="color: white;" class="nav-item">
              <a style="color: white;" class="nav-link" href="<%= dashboardDetails.serverUrl %>">Discord Server</a>
            </li>
          <% } %>
        </ul>
        <% if(hasClientSecret) { %>
          <ul class="navbar-nav">
            <% if (user) { %>
                <li style="color:white!important; background-color: #333232; border-radius: 0px 0px 5px 5px;" class="nav-item"><a style="color:white!important" href="/auth/logout" class="nav-link">Logout</a></li>
                </li>
                </ul>
              </li>
              </li>
            <% } else { %>
              <li style="color:white!important; background-color: #333232; border-radius: 0px 0px 5px 5px;" class="nav-item"><a style="color:white!important" href="/auth/login" class="nav-link">Login</a></li>
            <% } %>
          </ul>
        <% } %>
      </div>
    </div>
  </nav>